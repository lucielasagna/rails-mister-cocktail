
<div class = 'cocktails_show'>
  <h2><%= @cocktail.name %></h2>
  <% @cocktail.doses.each do |dose| %>
    <p>Quantit√©: <%= dose.description %></p>
    <p>Ingredient: <%= dose.ingredient.name %></p>
    <%= link_to "delete ingredient", dose_path(dose), class: "btn btn-primary", method: :delete %>
  <% end %>
</div>

<div class = 'dose_form'>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit %>
  <% end %>
</div>

